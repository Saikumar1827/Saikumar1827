from PIL import Image, ImageDraw, ImageFont

# Image size and background
width, height = 900, 620
img = Image.new("RGB", (width, height), color="#0d1117")
draw = ImageDraw.Draw(img)

# Fonts
try:
    font_title = ImageFont.truetype("arialbd.ttf", 28)
    font_subtitle = ImageFont.truetype("arialbd.ttf", 18)
    font_text = ImageFont.truetype("arialbd.ttf", 14)
except:
    font_title = ImageFont.load_default()
    font_subtitle = ImageFont.load_default()
    font_text = ImageFont.load_default()

# Title
draw.text((width/2, 30), "‚ö° Tech Stack", fill="#ffffff", font=font_title, anchor="ms")

# Sections and badges
sections = [
    ("‚òÅÔ∏è Cloud Platform & OS", [("AWS", "#ff9d00"), ("LINUX", "#facc15")]),
    ("üßë‚Äçüíª Scripting", [("SHELL SCRIPT", "#161616"), ("PYTHON", "#3b82f6")]),
    ("üõ†Ô∏è DevOps & CI/CD", [("JENKINS", "#1f2937"), ("GITHUB ACTIONS", "#2563eb")]),
    ("üê≥ Containers & Orchestration", [("DOCKER", "#22d3ee"), ("KUBERNETES", "#2563eb"), ("HELM", "#334155")]),
    ("üîß Infrastructure & Monitoring", [("TERRAFORM", "#7c3aed"), ("ANSIBLE", "#161616"), ("PROMETHEUS", "#f05232"), ("GRAFANA", "#f97316")])
]

y = 80
for section, items in sections:
    draw.text((width/2, y), section, fill="#ffffff", font=font_subtitle, anchor="ms")
    y += 20
    x = 200
    for item, color in items:
        draw.rectangle([x, y, x+140, y+32], fill=color)
        draw.text((x+70, y+16), item, fill="#ffffff", font=font_text, anchor="mm")
        x += 160
    y += 60

# Save PNG
img.save("tech-stack.png")
print("Saved as tech-stack.png in current folder")
